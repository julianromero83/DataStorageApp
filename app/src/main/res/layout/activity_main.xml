<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.byui.www.datastorageapp.MainActivity">

    <Button
        android:text="Advance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/advanceButton"
        android:onClick="advanceButtonClicked"
        android:width="150dp"
        android:layout_alignBaseline="@+id/saveCount"
        android:layout_alignBottom="@+id/saveCount"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="0"
        android:layout_width="match_parent"
        android:id="@+id/textNumber"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:layout_height="25dp"
        android:textSize="18sp" />

    <Button
        android:text="Save Count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/saveCount"
        android:onClick="saveButtonClicked"
        android:width="150dp"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/textNumber"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
